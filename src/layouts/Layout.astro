---
import type { routes } from '../data/instances/routes';
import '@fontsource/noto-sans';
import '../styles/global.css';
import AppBar from '../components/AppBar.astro';
import AppSidebar from '../components/AppSidebar.astro';

interface Props {
	title?: string;
	highlightedRoute?: keyof typeof routes;
}

const { title, highlightedRoute } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? 'FFVIIEC'}</title>
	</head>
	<body>
		<div class="background" />
		<div class="flex">
			<AppSidebar highlightedRoute={highlightedRoute} />
			<main class="flex flex-col flex-1">
				<AppBar />
				<div class="p-2">
					<slot />
				</div>
			</main>
		</div>
	</body>
</html>

<style>
	body {
		margin: 0;
		font-family: 'Noto Sans', sans-serif;
		color: white;
	}
	.background {
		position: fixed;
		width: 100vw;
		height: 100vh;
		background: no-repeat #030d17 url('../assets/background.jpg') center/cover;
		backdrop-filter: blur(5px);
		z-index: -1;
	}
</style>
